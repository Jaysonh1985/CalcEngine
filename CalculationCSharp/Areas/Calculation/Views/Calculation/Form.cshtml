@{
    ViewBag.Title = "Input";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<body ng-controller="calculationCtrl" class="ng-cloak">   
    <div class="container">

        <h1 class="center-block">Dynamic Form</h1>

        <form>
            <formly-form model="user" fields="fieldset">
            </formly-form>
        </form>

        <input class="btn btn-default" type="button" value="Calculate" ng-click="CalcButtonClick()" />

        <h1>
            Calculation Ouput
        </h1>
                   <uib-accordion close-others=false ng-model="output">
                        <uib-accordion-group ng-repeat="group in output" ng-init="colIndex = $index" is-open=true>
                            <uib-accordion-heading>
                                {{group.Group}}
                                <i class="pull-left glyphicon" ng-class="{'glyphicon-chevron-down': status.open, 'glyphicon-chevron-right': !status.open}"></i>
                            </uib-accordion-heading>

                            <table id="table" class="table">
                                <tr class="h4">
                                    <th>
                                        ID
                                    </th>
                                    <th>
                                        Field
                                    </th>
                                    <th>
                                        Value
                                    </th>
                                <tr ng-repeat="row in group.Output">
                                    <td>
                                        {{row.ID}}
                                    </td>
                                    <td>
                                        {{row.Field}}
                                    </td>
                                    <td>
                                        {{row.Value}}
                                    </td>
                                </tr>
                            </table>
                        </uib-accordion-group>
                    </uib-accordion>
                </div>

</body>
</html>