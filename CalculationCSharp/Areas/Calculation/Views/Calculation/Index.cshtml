
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h4 class="text-center">Calculation Forms</h4>
<div class="container body-content" ng-controller="calculationMenuCtrl" ng-cloak>

    <br />
    <button class="btn btn-default" ng-click="addBoard()">Add</button>
    <br />
    <table class="table table-bordered table table-responsive">
        <tr>
            <th>
                Name
            </th>
            <th>
                User
            </th>
            <th>
                Updated
            </th>
        </tr>
        <tr ng-repeat="board in Boards">
            <td ng-hide="editingData[board.ID]" width="50%" ng-click="openBoard()">{{board.Name}}</td>
            <td ng-show="editingData[board.ID]" width="50%"><input class="form-control text-box single-line" type="text" ng-model="board.Name" /></td>
            <td width="15%" ng-click="openBoard()">{{board.User}}</td>
            <td width="10%" ng-click="openBoard()">{{board.UpdateDate}}</td>
        </tr>
    </table>

</div>