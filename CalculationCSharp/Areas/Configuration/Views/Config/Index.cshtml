@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row"  ng-controller="configCtrl">
    <div class="col-md-6 col-xs-8">
        <input class="btn btn-default" type="button" value="Add" ng-click="AddButtonClick()" />
        <input class="btn btn-default" type="button" value="Save" ng-click="SaveButtonClick()" />
        <table class="table table-bordered table table-responsive">

            <tr>

                <th>Function</th>
                <th>Variable</th>
                <th>Type</th>
                <th>Output</th>

            </tr>


            <tr ng-repeat="rows in config" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index)"  >

                <td width="10">
                    <select name="singleSelect" ng:model="rows.Function" class="form-control" ng-change="setFunction($index)">
                        <option value="Input">Input</option>
                        <option value="Maths">Maths</option>
                    </select>
                </td>

                <td width="40%" ng-mouseenter="updateParameter($index)"><span><input type="text" ng:model="rows.Name" class="form-control" ></span></td>

                 <td width="20%">
                    <select name="singleSelect" ng:model="rows.Type" class="form-control">
                        <option value=""></option>
                        <option value="String">String</option>
                        <option value="String">Date</option>
                        <option value="String">Integar</option>
                        <option value="String">Decimal</option>
                    </select>
                </td>
                <td width="10%" ng-click="setClickedRow($index)">{{rows.Output}}</td>
                <td width="1%">
                    [<a ng:click="remItem($index)">X</a>]
                </td>
            </tr>
            <tr>
                <td><a ng:click="btn_add($index)" class="btn btn-default">Add</a></td>
            </tr>


        </table>
    </div>

    <div class="col-md-6 col-xs-4">

        <div ng-view></div>

     </div>
</div>
