@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-2.2.3.min.js"></script>
<script src="~/Scripts/jquery-ui-1.11.4.js"></script>
<script src="~/Scripts/jquery-ui-touch-punch.js"></script>
<script>$('#Stories').draggable();</script>

<div style="width:99%; padding-left:0%; margin-left:2%; margin-right:2%; padding-right:2%;" ng-controller="boardCtrl">
    <input class="btn btn-default" type="button" value="Add" ng-click="AddButtonClick()" />
    <input class="btn btn-default" type="button" value="Save" ng-click="SaveButtonClick()" />
    <input class="btn btn-default" type="button" value="CSV" ng-click="CSVButtonClick()" />

    <form editable-form name="tableform">
        <table class="table table-bordered table-hover table-condensed">
            <tr style="font-weight: bold">
                <td style="width:33.3%;background-color:#ae0000; color:white"><h4>MoSCoW</h4></td>
                <td style="width:33.3%;background-color:#ae0000; color:white"><H4>Timebox</H4></td>
                <td style="width:33.3%;background-color:#ae0000; color:white"><H4>Allocation</H4></td>
            </tr>
            <tr>

                <td>
                    <select name="singleSelect" ng-model="search.Moscow" placeholder="Enter M.o.S.C.o.W rating" class="form-control">
                        <option value=""></option>
                        <option value="Must">Must</option>
                        <option value="Should">Should</option>
                        <option value="Could">Could</option>
                        <option value="Won't">Won't</option>
                        {{Moscow}}
                    </select>
                </td>
                <td>
                    <select name="singleSelect" ng-model="search.Timebox" placeholder="Enter Timebox" class="form-control">
                        <option value=""></option>
                        <option value="Timebox 1">Timebox 1</option>
                        <option value="Timebox 2">Timebox 2</option>
                        <option value="Timebox 3">Timebox 3</option>
                        <option value="Timebox 4">Timebox 4</option>
                        <option value="Timebox 5">Timebox 5</option>
                        <option value="Timebox 6">Timebox 6</option>
                        {{Timebox}}
                    </select>
                </td>
                <td>
                    <select name="singleSelect" ng-model="search.User" placeholder="Select User" class="form-control">
                        <option value=""></option>
                        <option value="Jayson Herbert">Jayson Herbert</option>
                        <option value="John Smith">John Smith</option>
                        {{User}}
                    </select>
                </td>

            </tr>
            </table>
           </form>

            <div class="row">

                <div class="col-sm-3 panel panel-primary colStyle" id="{{col.Id}}" kanban-board-drop="over"
                     ng-repeat="col in columns">
                    <div class="panel-heading" style="margin-bottom: 10px;">
                        <h3 class="panel-title">{{col.Name}}</h3>
                    </div>

                    <div id="Stories" class="thumbnail" draggable="true" kanban-board-dragg="story"
                         ng-repeat="story in col.Stories | filter: search" style="margin-bottom: 10px;" ng-click="UpdateButtonClick('lg')">
                        <div class="caption">
                            <h5><strong>{{story.Name}}</strong></h5>
                        </div>
                    </div>
                </div>
            </div>

</div>
