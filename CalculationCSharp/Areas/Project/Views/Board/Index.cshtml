@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("New", "Board", null, null, new { id = 0, @class = "btn btn-default" })
    <input class="form-control text-box single-line" type="text" id="search" placeholder="Type to search">
</p>

<div ng-controller="menuCtrl">
    <table class="table table-bordered table table-responsive">

        <tr>
            <th>
                Name
            </th>
            <th>
                User
            </th>
            <th>
                Updated
            </th>
            <th>

            </th>
        </tr>


        <tr ng-repeat="board in Boards">
            <td width="50%" ng-click="openBoard()">
                {{board.Name}}
            </td>
            <td width="25%" ng-click="openBoard()">
                {{board.User}}
            </td>
            <td width="25%" ng-click="openBoard()">
                {{board.UpdateDate}}
            </td>
            <td>
                <input type="button" class="btn btn-xs btn-danger" value="Delete" ng-click="deleteBoard()" />
            </td>
        </tr>


    </table>
</div>