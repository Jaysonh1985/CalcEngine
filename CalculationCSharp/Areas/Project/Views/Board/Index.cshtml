@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    @Html.ActionLink("New", "Board", null, null, new { id = 0, @class = "btn btn-default" })
    <input class="form-control text-box single-line" type="text" id="search" placeholder="Type to search">
</p>
<div ng-controller="menuCtrl">
    <table class="table table-bordered table table-responsive">
        <tr>
            <th>
                Name
            </th>
            <th>
                User
            </th>
            <th>
                Updated
            </th>
            <th>
            </th>
        </tr>
        <tr ng-repeat="board in Boards">
            <td ng-hide="editingData[board.ID]" width="50%" ng-click="openBoard()">{{board.Name}}</td>
            <td ng-show="editingData[board.ID]" width="50%" ><input class="form-control text-box single-line" type="text" ng-model="board.Name"/></td>
            <td width="15%" ng-click="openBoard()">{{board.User}}</td>
            <td width="10%" ng-click="openBoard()">{{board.UpdateDate}}</td>
            <td>
                <button class="btn btn-primary" ng-hide="editingData[board.ID]" ng-click="modify(board)">Modify</button>
                <button class="btn btn-success" ng-show="editingData[board.ID]" ng-click="update(board)">Update</button>
                <button class="btn btn-danger" ng-show="editingData[board.ID]" ng-click="update(board)">Cancel</button>
                <input type="button" ng-hide="editingData[board.ID]" class="btn btn-danger" value="Delete" ng-click="deleteBoard($index)" />
            </td>            
        </tr>
    </table>
</div>
