@model CalculationCSharp.Models.CalculationRegression

<div class="">

    <div class="modal-title" style="color: #3A87AD">
        <h3>Add Note</h3>
    </div>

    <br />
    @using (Html.BeginForm("AddNote", "Dashboard", FormMethod.Post))
    {
        <div class="row-fluid">
            Enter Note
        </div>
        <div class="row-fluid">
            @Html.TextAreaFor(m => m.Input, new { style="Width:400px; height:200px;"})
        </div>

        <div class="row-fluid">
            <div class="col-md-4 col-md-offset-4">
                <button type="submit" id="btnSave" class="btn btn-sm">Save</button>
                <button type="button" class="btn btn-sm" data-dissmiss="modal">Cancel</button>
            </div>
        </div>
    }
</div>
