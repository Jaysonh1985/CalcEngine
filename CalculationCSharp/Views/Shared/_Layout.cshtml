<!DOCTYPE html>
<html ng-app="kanbanBoardApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CalcSteps</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/angular-ui-tree.css" rel="stylesheet" />
    <link href="~/Content/angular-object-diff.css" rel="stylesheet" />
    <link href="~/Content/angular-material.css" rel="stylesheet" />
    <link href="~/Content/angular-material.layouts.css" rel="stylesheet" />
</head>
<body>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-collapse collapse">
               
                <ul class="nav navbar-nav">
                    <li><img src="~/Images/calcstepsmenu.jpg" style="width:127px; height:50px; padding:2%" /></li>
                    <li style="left">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                   @if (Context.User.Identity.IsAuthenticated)
                   {
                    <li>@Html.ActionLink("Configuration", "Index", new { Area = "Configuration", controller = "Config" })</li>
                    <li>@Html.ActionLink("Calculation", "Index", new { Area = "Calculation", controller = "Calculation" })</li>
                    <li>@Html.ActionLink("Project", "Index", new { Area = "Project", controller = "Board" })</li>
                    <li>@Html.ActionLink("Maintenance", "Index", new { Area = "Maintenance", controller = "Maintenance" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

        @if (Context.User.Identity.IsAuthenticated)
        {
            <div data-ng-controller="TimeoutCtrl">
                @RenderBody()

            </div>
        }
        else
        {
            @RenderBody()

        }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//unpkg.com/api-check@latest/dist/api-check.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/Scripts/jquery.ui.touch-punch.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/Scripts/angular-ui/sortable.js"></script>
    <script src="~/AppScript/main.js"></script>
    @Scripts.Render("~/bundles/projectBoard")
    @Scripts.Render("~/bundles/calculationConfiguration")
    @Scripts.Render("~/bundles/Calculation")
    <script src="~/Scripts/angular-filter.js"></script>
    <script src="~/Scripts/angular-ui-tree.js"></script>
    <script src="~/Scripts/angular-object-diff.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="~/Scripts/ng-csv.js"></script>
    <script src="~/Scripts/angular-csv-import.js"></script>
    <script src="~/Scripts/angular-idle.js"></script>
    <script src="~/Scripts/angular-aria.js"></script>
    <script src="~/Scripts/angular-material.js"></script>
    <script src="~/Scripts/angular-messages.js"></script>
    <script src="~/Scripts/contextmenu.js"></script>
</body>

</html>
